<Window x:Class="blackJack_evoluto.PaginaAccesso"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:blackJack_evoluto"
        mc:Ignorable="d"
        Title="PaginaAccesso" Height="290" Width="174">
    <Grid Margin="0,0,0,-6">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF007F19"/>
                <GradientStop Color="Black" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label_nomeUtente" Content="Nome Utente:" HorizontalAlignment="Left" Height="32" Margin="24,27,0,0" VerticalAlignment="Top" Width="118" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,0,2"/>
        <TextBox x:Name="txtBox_nomeUtente" HorizontalAlignment="Left" Height="27" Margin="23,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" BorderBrush="White" Background="{x:Null}" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="label_password" Content="Password:" HorizontalAlignment="Left" Height="32" Margin="23,108,0,0" VerticalAlignment="Top" Width="119" Foreground="White" FontSize="16" FontWeight="Bold" BorderBrush="White" BorderThickness="0,0,0,2"/>
        <TextBox x:Name="txtBox_Password" HorizontalAlignment="Left" Height="27" Margin="23,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" BorderBrush="White" Background="{x:Null}" Foreground="White" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="button_registrati" Content="Registrati" HorizontalAlignment="Left" Height="32" Margin="56,227,0,0" VerticalAlignment="Top" Width="54" Background="{x:Null}" Foreground="White" BorderBrush="White" BorderThickness="0,0,0,1" Click="button_registrati_Click"/>
        <Button Content="Accedi" HorizontalAlignment="Left" Height="31" Margin="23,196,0,0" VerticalAlignment="Top" Width="119" Background="#FF007F19" BorderBrush="White" Foreground="White" Click="Button_Click"/>

    </Grid>
</Window>
